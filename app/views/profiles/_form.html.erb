<%= semantic_form_for @profile, url: myprofile_path, html: { multipart: true }  do |f| %>
  <% if @profile.errors.any? %>
    <div class='col-lg-12'>
      <div class='alert alert-danger'>
      <% @profile.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
      </div>
    </div>
  <% end %>
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Daten:
        </h3>
      </div>
      <div class="panel-body">
        <%= f.input :first_name, label: false %>
        <%= f.input :last_name, label: false %>
        <%= f.input :age, label: false %>
        <%= f.input :bio, label: false %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Adresse:
        </h3>
      </div>
      <div class="panel-body">
        <%= f.input :address, label: false %>
        <%= f.input :plz, label: false %>
        <%= f.input :city, label: false %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Photo</h3>
      </div>
      <div class="panel-body">
        <%= image_tag @profile.photo.url(:thumb) %>
        <%= f.input :photo, label: false %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.action :submit, :as => :button, :label => "Speichern" %>
    </div>
    <div class='form-group'>
      <%= link_to 'Abbrechen', myprofile_path, method: :get, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
