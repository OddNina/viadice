<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Resend unlock instructions</h3>
    </div>
    <div class="panel-body">
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
          
        <%= f.input :password, :label => false %>
        <%= f.input :password_confirmation, :label => false %>

        <%= f.acion :submit, :as => :button, :label => "edit" %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>